@model IEnumerable<GamersInfoApp.Models.Gamer>

@{
    ViewData["Title"] = "Index";
}

<h1>Gamers</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Gamer Name
            </th>
            <th>
                Gamer Age
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.GamerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GamerAge)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.GamerID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.GamerID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.GamerID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
