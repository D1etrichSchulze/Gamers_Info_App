@model IEnumerable<GamersInfoApp.Models.Gamer_Game>

@{
    ViewData["Title"] = "Index";
}

<h1>Gamer Games</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>            
            <th>                
                @Html.DisplayNameFor(model => model.Gamer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Game)
            </th>
            <th>
                Hours Played
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>            
            <td>
                @Html.DisplayFor(modelItem => item.Gamer.GamerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Game.GameName)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HoursPlayed)
                </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.GamerGameID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.GamerGameID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.GamerGameID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
